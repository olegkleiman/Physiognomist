<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/layout_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_template"
            android:layout_marginRight="-8dp"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="-2dp"/>

        <ImageView
            android:id="@+id/image_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/nose_1"
            android:layout_below="@+id/checkBox_template"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/text_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_template" />


    </RelativeLayout>


</LinearLayout>